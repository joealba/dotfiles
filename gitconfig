[color]
  diff = auto
  status = auto
  branch = auto
	ui = 1
[color "branch"]
  current = red reverse
  local = blue
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = yellow
  changed = red
  untracked = cyan
[merge]
	stat = true
	conflictstyle = diff3
[push]
	default = tracking
[pull]
  default = current
[status]
  submodule = 1
[alias]
  uncommit = reset --soft HEAD^
  lg = log --graph --pretty=oneline --abbrev-commit
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  fl = log -u
  dl = "!git ll -1"
  dlc = diff --cached HEAD^
  b = branch
  unstage = reset HEAD
  current-branch = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
  # Usage: git track origin/feature-123-login-form
  track = checkout -t
  standup = !git log --all --no-merges --graph --date=relative --committer=$(git config --get user.email) --pretty=format:'%C(cyan) %ad %C(yellow)%h %Creset %s %Cgreen%d' --since="$(if [[ "Mon" == "$(LC_TIME=en_US.UTF-8 date +%a)" ]]; then echo "last friday"; else echo "yesterday"; fi)"
[apply]
  whitespace = nowarn
[core]
  pager = less -r
  mergeoptions = --no-ff --no-commit
	excludesfile = /Users/joealba/.gitignore_global
[user]
	name = Joe Alba
	email = joe@joealba.com
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[gpg]
	program = gpg2
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
